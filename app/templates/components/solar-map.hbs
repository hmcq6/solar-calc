{{#g-map
  class="col-sm"
  lat="42.3600825"
  lng="-71.05888010000001"
  zoom=18
  onLoad=(action "onLoad")
  onClick=(action "onClick")
  as |g|
}}
  {{#g.control position="TOP_CENTER"}}
    <div class="map-control top-panel">
      {{input type="text" value=address class="form-control" placeholder="Search for Location"}}
      {{#bs-button
        type="primary"
        onClick=(action "search" g.map)}}
        Search
      {{/bs-button}}
    </div>
  {{/g.control}}
  {{#g.control position="TOP_RIGHT"}}
    <div class="map-control right-panel">
      {{#bs-button
        type="secondary"
        onClick=(action "toggleDraw" g.map)}}
        {{input type="checkbox" checked=draw}}
        Draw Plot
      {{/bs-button}}
      {{#bs-button
        type="primary"
        onClick=(action "toggleBoundingBox")}}
        {{input type="checkbox" checked=isBoundingBoxShown}}
        Overlay Bounding Box
      {{/bs-button}}
      {{#bs-button
        type="secondary"
        disabled=isClearDisabled
        onClick=(action "clearPoints")}}
        Clear
      {{/bs-button}}
    </div>
  {{/g.control}}
  {{#g.control position="RIGHT_CENTER"}}
    <div class="map-control right-panel text-right">
      <label>Expected Solar Efficiency: </label>
      {{#bs-dropdown as |dd|}}
        {{#dd.button}}{{selectedEfficiency}}<span class="caret"></span>{{/dd.button}}
        {{#dd.menu as |menu|}}
          {{#each solarEfficiencyRanges as |range|}}
            {{#menu.item}}
              <a {{action "selectRange" range}}>{{range}}</a>
            {{/menu.item}}
          {{/each}}
        {{/dd.menu}}
      {{/bs-dropdown}}
      <br />
      <label>Area: </label>
      {{format-value area '0,0.00'}} MÂ²
      <br />
      <label>Peak Season Power: </label>
      {{format-value seasonalPeakPower '0,0'}} W
      <br />
      <label>Off Season Power: </label>
      {{format-value seasonalMinPower '0,0'}} W
      <br />
    </div>
  {{/g.control}}
{{/g-map}}
{{yield}}
